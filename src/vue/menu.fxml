<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.CheckMenuItem?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>

<MenuBar xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="controleur.EcouteurMenus">
  <menus>
    <Menu mnemonicParsing="false" text="Fichier">
      <items>
            <CheckMenuItem mnemonicParsing="false" onAction="#onSave" text="Sauvegarder la configuration" />
            <SeparatorMenuItem mnemonicParsing="false" />
        	<MenuItem mnemonicParsing="false" onAction="#onFermer" text="Fermer" />
      </items>
    </Menu>
    <Menu mnemonicParsing="false" text="Aide">
      <items>
        <MenuItem mnemonicParsing="false" onAction="#onAPropos" text="A propos" />
      </items>
    </Menu>
  </menus>
</MenuBar>
